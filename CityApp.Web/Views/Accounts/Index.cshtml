@model AccountList
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header card-header-icon" data-background-color="green">
                    Accounts
                </div>
                <div class="card-content">
                    <br />
                    <p>You belong to @Model.Accounts.Count.  Please select the account you would like to view. </p>
                    
                    @if (Model.Accounts.Count > 0)
                    {

                        <div class="row">
                            <div class="col-sm-12">
                                <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>City</th>

                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var account in Model.Accounts)
                                        {
                                            <tr>
                                                <td>
                                                    <a asp-route="Account" asp-route-action="Index" asp-route-controller="Home" asp-route-accountNum="@account.Number" class="blue-link">@account.Name</a>

                                                </td>
                                                <td>@account.CityName</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>

                    }else
                    {
                        <div class="row">
                            <div class="col-sm-12">
                                <h3>Your login is not associated with any accounts.</h3>
                            </div>
                        </div>

                    }

                </div>
            </div>

        </div>
    </div>

</div>

@section scripts
{


}
