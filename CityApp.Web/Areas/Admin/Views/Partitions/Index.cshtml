@model CityApp.Web.Areas.Admin.Models.Partitions.PartitionListViewModel
@{
    ViewData["Title"] = "Partitions";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-icon" data-background-color="green">
                    <i class="material-icons">folder_shared</i>
                </div>
                <div class="card-content clearfix">
                    <h4 class="card-title pull-left">Partition</h4>
                    <a asp-area="admin" asp-action="Create" asp-controller="Partitions" class="btn btn-info fltrght btn-addcl">
                        <span class="btn-label">
                            <i class="material-icons">add</i>
                        </span>
                        Add Partition<div class="ripple-container"></div>

                    </a>
                    <div class="toolbar cl-addbtn-outer">
                        <!--        Here you can write extra buttons/actions for the toolbar              -->
                        
                    </div>

                    <div class="material-datatables responsivetable">
                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        <a asp-action="Index"
                                           asp-route-sortDirection="@Model.OppositeSortDirection"
                                           asp-route-sortOrder="@CityApp.Web.Areas.Admin.Models.Partitions.PartitionListViewModel.NameSortParm">Name</a>
                                    </th>
                                    <th>
                                        <a asp-action="Index"
                                           asp-route-sortDirection="@Model.OppositeSortDirection"
                                           asp-route-sortOrder="@CityApp.Web.Areas.Admin.Models.Partitions.PartitionListViewModel.OccupantsSortParm">Occupants</a>
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var partition in Model.Partition)
                                {
                                    <tr>
                                        <td><a asp-controller="Partitions" style="color:black !important" asp-action="Edit" asp-route-Id="@partition.Id">@partition.Name</a></td>
                                        <td>@partition.Occupancy</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="pull-left">
                                    <cs-pager cs-paging-pagesize="@Model.Paging.ItemsPerPage"
                                              cs-paging-pagenumber="@Model.Paging.CurrentPage"
                                              cs-paging-totalitems="@Model.Paging.TotalItems"
                                              cs-paging-info="@Model.Paging"
                                              cs-pagenumber-param="page"
                                              cs-show-first-last="true"
                                              cs-suppress-empty-nextprev="true"
                                              cs-suppress-inactive-firstlast="true"
                                              cs-first-page-text="First"
                                              cs-last-page-text="Last"
                                              cs-pager-li-current-class="active"
                                              cs-pager-li-non-active-class="disabled"
                                              asp-route-sortDirection="@Model.SortDirection"
                                              asp-route-sortOrder="@Model.SortOrder"
                                              asp-controller="Partitions"
                                              asp-action="Index">

                                    </cs-pager>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <p class="mt pull-right">
                                    Total results: @Model.Paging.TotalItems
                                </p>
                                @*<div class="clearfix">

                                </div>
                            </div>*@

                        </div>
                    </div>
                </div>
                <!-- end content-->
            </div>
            <!--  end card  -->
        </div>
        <!-- end col-md-12 -->
    </div>
    <!-- end row -->
</div>

