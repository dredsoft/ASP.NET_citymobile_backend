@model CityApp.Web.Areas.Admin.Models.CityListViewModel
    @{
        ViewData["Title"] = "City";
        Layout = "~/Views/Shared/_InternalLayout.cshtml";
    }

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-icon" data-background-color="green">
                        <i class="material-icons">assignment_ind</i>
                    </div>

                    <div class="card-content clearfix">
                        <h4 class="card-title pull-left">
                            @ViewData["Title"]
                        </h4>
                        <a asp-area="admin" asp-action="Create" asp-controller="city" class="btn btn-info fltrght btn-addcl">
                            <span class="btn-label">
                                <i class="material-icons">add</i>
                            </span>
                            Add City<div class="ripple-container"></div>
                        </a>
                        <div class="toolbar cl-addbtn-outer">

                            <form>
                                <div class="col-sm-12 mrgnTopBottom">

                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group label-floating">
                                                <label asp-for="Name" class="control-label"></label>
                                                <input asp-for="Name" type="text" class="form-control">

                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group label-floating">
                                                <label asp-for="State" class="control-label"></label>
                                                <input asp-for="State" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="srchbtn">
                                            <button type="submit" class="btn btn-primary btn-round btn-fab btn-fab-mini">
                                                <i class="material-icons">search</i>
                                                <div class="ripple-container"></div>
                                            </button>

                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="material-datatables responsivetable">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            <a asp-action="Index"
                                               asp-route-sortDirection="@Model.OppositeSortDirection"
                                               asp-route-sortOrder="@CityApp.Web.Areas.Admin.Models.CityListViewModel.NameSortParam"
                                               asp-route-Name="@Model.Name"
                                               asp-route-State="@Model.State">
                                                Name
                                            </a>
                                        </th>
                                        <th>
                                            <a asp-action="Index"
                                               asp-route-sortDirection="@Model.OppositeSortDirection"
                                               asp-route-sortOrder="@CityApp.Web.Areas.Admin.Models.CityListViewModel.StateSortParam"
                                               asp-route-Name="@Model.Name"
                                               asp-route-State="@Model.State">State</a>
                                        </th>

                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var city in Model.CityList)
                                    {
                                        <tr>
                                            <td><a asp-controller="city" style="color:black !important" asp-action="Edit" asp-route-Id="@city.Id">@city.Name</a></td>
                                            <td><a asp-controller="city" style="color:black !important" asp-action="Edit" asp-route-Id="@city.Id">@city.State</a></td>


                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="pull-left">
                                    <cs-pager cs-paging-pagesize="@Model.Paging.ItemsPerPage"
                                              cs-paging-pagenumber="@Model.Paging.CurrentPage"
                                              cs-paging-totalitems="@Model.Paging.TotalItems"
                                              cs-paging-info="@Model.Paging"
                                              cs-pagenumber-param="page"
                                              cs-show-first-last="true"
                                              cs-suppress-empty-nextprev="true"
                                              cs-suppress-inactive-firstlast="true"
                                              cs-first-page-text="First"
                                              cs-last-page-text="Last"
                                              cs-pager-li-current-class="active"
                                              cs-pager-li-non-active-class="disabled"
                                              asp-route-sortDirection="@Model.SortDirection"
                                              asp-route-sortOrder="@Model.SortOrder"
                                              asp-route-Name="@Model.Name"
                                              asp-route-State="@Model.State"
                                              asp-route-PageSize="@Model.PageSize"
                                              asp-controller="city"
                                              asp-action="Index">
                                    </cs-pager>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <p class="mt pull-right">
                                    Total results: @Model.Paging.TotalItems
                                </p>
                                @*<div class="clearfix">

                                    </div>*@
                            </div>
                        </div>


                    </div>
                </div>
                <!-- end content-->

            </div>
            <!--  end card  -->
        </div>
        <!-- end col-md-12 -->
    </div>
