@model CityApp.Web.Areas.Admin.Models.CityModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_InternalLayout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-icon" data-background-color="green">
                    City
                </div>
                <div class="card-content">

                    <form method="post" role="form" asp-antiforgery="true" class="with-ajax">
                        <div>
                            @Html.HiddenFor(m => m.Id)
                        </div>
                        <div class="row mrgnTop30">
                            <div class="col-sm-12">
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" type="text" class="form-control">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        <label asp-for="TimeZone" class="control-label"></label>
                                        <select asp-for="TimeZone" class="form-control">
                                            <option value=""></option>
                                            <option value="Pacific Standard Time">Pacific Standard Time</option>
                                            <option value="Mountain Standard Time">Mountain Standard Time</option>
                                            <option value="Eastern Standard Time">Eastern Standard Time</option>
                                        </select>
                                        <span asp-validation-for="TimeZone" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        <label asp-for="County" class="control-label"></label>
                                        <input asp-for="County" type="text" class="form-control">
                                        <span asp-validation-for="County" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        <label asp-for="Type" class="control-label"></label>
                                        <input asp-for="Type" type="text" class="form-control">
                                        <span asp-validation-for="Type" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        <label asp-for="State" class="control-label"></label>
                                        <input asp-for="State" type="text" class="form-control">
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        <label asp-for="StateCode" class="control-label"></label>
                                        <input asp-for="StateCode" type="text" class="form-control">
                                        <span asp-validation-for="StateCode" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        <label asp-for="Latitude" class="control-label"></label>
                                        <input asp-for="Latitude" type="text" class="form-control">
                                        <span asp-validation-for="Latitude" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        <label asp-for="Longitude" class="control-label"></label>
                                        <input asp-for="Longitude" type="text" class="form-control">
                                        <span asp-validation-for="Longitude" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-fill btn-rose">Save<div class="ripple-container"></div></button>

                                    <a asp-controller="city" asp-action="index"> Cancel</a>
                                </div>
                            </div>
                        </div>

                    </form>

                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>