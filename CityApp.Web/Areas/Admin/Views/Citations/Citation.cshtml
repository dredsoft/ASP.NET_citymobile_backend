                                    <td><span class="metric-label">Color</span></td>
                                    <td>
                                        <div class="form-group label-floating">
                                            <input asp-for="VehicleColor" type="text" class="form-control">
                                            <span asp-validation-for="VehicleColor" class="text-danger"></span>
                                        </div>
                                    </td>
